<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>CouchSurfing</display-name>
  <welcome-file-list>
    <welcome-file>IndexAction.html</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>SetCharacterEncoding</filter-name>
    <filter-class>com.couchsurfing.tool.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SetCharacterEncoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>JudgeUserLoginFilter</filter-name>
    <filter-class>com.couchsurfing.tool.JudgeUserLoginFilter</filter-class>
    <init-param>
      <param-name>unUrl</param-name>
      <param-value>/loginAction.html,/IndexAction.html,/ZhuceUser.html</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>JudgeUserLoginFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>JudgeUserLoginFilter</filter-name>
    <url-pattern>*.html</url-pattern>
  </filter-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>